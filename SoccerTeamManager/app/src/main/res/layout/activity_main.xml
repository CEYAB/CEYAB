<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.uottawa.soccerteammanager.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="OnSetAvatarButton"
                app:srcCompat="@drawable/fcb" />

        </LinearLayout>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="216dp"
            android:layout_height="25dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:lineSpacingExtra="8sp"
            android:text="    Soccer Team Manager"
            android:textColor="@color/colorPrimary"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/TeamNameField"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="(Please Enter a Team Name)" />

        <TextView
            android:id="@+id/teamNameTextField"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@+id/TeamNameField"
            android:layout_centerHorizontal="true"
            android:text="      Team Name"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/teamAddressField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button"
            android:layout_alignEnd="@+id/titleTextView"
            android:layout_alignRight="@+id/titleTextView"
            android:layout_marginBottom="43dp"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:text="(Please Enter a Zip Code)" />

        <TextView
            android:id="@+id/teamAddressTextField"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_above="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"
            android:text="       Team Address"
            android:textColorLink="@android:color/background_dark"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="41dp"
            android:onClick="OnOpenInGoogleMaps"
            android:text="OPEN IN GOOGLE MAPS" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
